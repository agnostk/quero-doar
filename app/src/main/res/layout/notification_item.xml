<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/notification_list_item_card"
    android:layout_width="wrap_content"
    android:layout_height="120dp"
    android:layout_gravity="center"
    card_view:cardBackgroundColor="@color/white"
    card_view:contentPadding="5dp"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="10dp"
    card_view:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/notification_list_item_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:textSize="17sp"
            android:text="@string/notification_list_item_content_default"
            card_view:layout_constraintLeft_toLeftOf="parent"
            card_view:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/notification_list_item_datereceived"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/notification_list_item_datereceived_default"
            android:textSize="13sp"
            card_view:layout_constraintRight_toRightOf="parent"
            card_view:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>